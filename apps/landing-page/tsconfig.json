{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "types": ["vitest/globals"],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@repo/ui/*": ["../../packages/ui/src/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "next-env.d.ts", "next.config.ts", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
